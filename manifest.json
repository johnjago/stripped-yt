{
  "description": "No comments, no related videos, no distractions. Only video.",
  "manifest_version": 2,
  "name": "Stripped YouTube",
  "version": "2.0.0",
  "homepage_url": "https://gitlab.com/johnjago/stripped-yt",
  "permissions": ["*://*.youtube.com/*"],
  "icons": {
    "48": "icon/youtube_ico.png"
  },

  "applications": {
    "gecko": {
      "id": "stripped-yt@stripped-yt.com",
      "strict_min_version": "45.0"
    }
  },

  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "css": ["stripped-yt.css"]
    }
  ]
}
