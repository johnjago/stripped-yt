{
  "description": "Watch videos without distractions.",
  "manifest_version": 2,
  "name": "Stripped YouTube",
  "version": "1.3.0",
  "homepage_url": "https://gitlab.com/johnjago/stripped-yt",
  "permissions": ["*://*.youtube.com/*", "activeTab"],
  "icons": {
    "48": "icon/youtube_ico.png"
  },

  "applications": {
    "gecko": {
      "id": "stripped-yt@stripped-yt.com",
      "strict_min_version": "45.0"
    }
  },

  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["stripped-yt.js"]
    }
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_icon": {
      "48": "icon/youtube_ico.png"
    }
  }
}
